{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2019",
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node",
            "jasmine"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "declaration": true,
        "strict": true,
        "pretty": true
    },
    "include": [
        "src/**/*.ts",
        "build.mjs"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
