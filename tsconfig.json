{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2019",
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "jasmine",
            "node"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": false,
        "declaration": true,
        "strict": true,
        "pretty": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
